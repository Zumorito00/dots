# Path
export PATH="$PATH:${HOME}/.scripts/:${HOME}/.local/bin"

# Language environment
export LC_CTYPE="en_AU.UTF-8"

# ZSH config directory
export ZDOTDIR="${HOME}/.config/zsh"

# Vim locations
export VIMINIT="source ~/.vim/.vimrc"

# Default programs
export EDITOR="vim"
export VISUAL="vim"
export TERMINAL="st"
export BROWSER="firefox"
