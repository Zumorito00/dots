#
# wm independent binds
#

# terminal emulator
super + Return
	$TERMINAL

# file editor
super + r
    $TERMINAL -e vifmrun

# program launcher
super + d
	rofi -show run

# browser
super + F2
    $BROWSER

# vimwiki
super + v
    $TERMINAL -e "zsh" -c "vim ~/vimwiki/index.md"

# calcurse
super + c
    $TERMINAL -e calcurse

# font awesome icon menu
Print
    font-awesome-select

# # make sxhkd reload its configuration files:
# super + Escape
# 	pkill -USR1 -x sxhkd

# gap change
super + shift + d
    bspc config window_gap 30; bspc config border_width 3
super + shift + w
    bspc config window_gap 0; bspc config border_width 1

# volume controls
XF86Audio{Lower,Raise}Volume
    volcontrols {down,up}
XF86AudioMute
    volcontrols mute
# music controls
XF86AudioPlay
    playerctl play-pause
alt + {Left,Right}
    playerctl {previous,next}
# brightness controls
XF86MonBrightness{Down,Up}
    brightcontrols {down,up}
shift + XF86MonBrightnessDown
    sudo light -S 1
# bat check
super + ctrl + b
    notify-send -r 1 "Battery Check" "$(acpi | cut -d " " -f 3-)"

#
# bspwm binds
#

# close/kill windows
super + {_,shift + }q
    bspc node -{c,k}

# focus node in given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus or send to given desktop
super + {_,shift + } {1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# focus monocle nodes
super + {bracketleft,bracketright}
    bspc node -f {prev,next}.local

# focus last desktop
super + Tab
    bspc desktop -f last

# set window state
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# toggle sticky windows
super + a
    bspc node -g sticky

# toggle hidden windows
super + F1
    hiddentoggle

# alternate between tiled and monocle layout
super + m
    bspc desktop -l next

# preselect window creation direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# cancel preselection
super + ctrl + space
    bspc node -p cancel

# expand window in given direction
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# expand window in given direction
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
