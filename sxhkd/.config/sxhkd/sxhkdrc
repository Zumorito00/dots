#
# wm independent hotkeys
#

# terminal emulator
super + Return
	$TERMINAL

# file editor
super + r
    $TERMINAL -e vifmrun

# program launcher
super + d
	rofi -show run

# browser
super + shift + f
    $BROWSER

# vscode
super + backslash
    vscodium

# # make sxhkd reload its configuration files:
# super + Escape
# 	pkill -USR1 -x sxhkd

# # gap change
# super + shift + d
#     bspc config window_gap 12; bspc config border_width 2
# super + shift + w
#     bspc config window_gap 0; bspc config border_width 1

# volume controls
XF86Audio{Lower,Raise}Volume
    volcontrols {down,up}
XF86AudioMute
    volcontrols mute
# music controls
XF86AudioPlay
    playerctl play-pause
# XF86Audio{Prev,Next}
#     playerctl {previous,next}
# brightness controls
XF86MonBrightness{Down,Up}
    brightcontrols {down,up}
# bat check
super + ctrl + b
    notify-send -r 1 "Battery Check" "$(acpi | cut -d " " -f 3-)"
